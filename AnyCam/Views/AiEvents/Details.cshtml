@model AnyCam.Models.AiEvent

@{
    ViewData["Title"] = "AI Event Details";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h2">
                    <i class="fas fa-brain"></i> AI Detection Details
                </h1>
                <div>
                    <small class="text-muted me-3">Automatically generated by AI analysis</small>
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left"></i> Back to Reports
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Event Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Event Type</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary fs-6">@Model.EventType</span>
                        </dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Timestamp</dt>
                        <dd class="col-sm-9">@Model.Timestamp.ToString("f")</dd>

                        <dt class="col-sm-3">Detected Objects</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.DetectedObjects))
                            {
                                <code>@Model.DetectedObjects</code>
                            }
                            else
                            {
                                <span class="text-muted">No objects detected</span>
                            }
                        </dd>

                        <dt class="col-sm-3">AI Confidence</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Confidence))
                            {
                                <span class="badge bg-info">@Model.Confidence</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Alert Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.AlertSent)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check"></i> Alert Sent
                                </span>
                                @if (!string.IsNullOrEmpty(Model.AlertType))
                                {
                                    <small class="text-muted ms-2">via @Model.AlertType</small>
                                }
                            }
                            else
                            {
                                <span class="badge bg-warning">
                                    <i class="fas fa-clock"></i> Alert Pending
                                </span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            @if (Model.VideoClip != null)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-video"></i> Associated Video Clip
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">
                            <strong>Camera:</strong>
                            @if (Model.Camera != null)
                            {
                                <a asp-controller="Cameras" asp-action="View" asp-route-id="@Model.Camera.Id">
                                    @Model.Camera.Name
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Unknown</span>
                            }
                        </p>
                        <p class="mb-2">
                            <strong>Recording Time:</strong>
                            @Model.VideoClip.StartTime.ToString("g") - @Model.VideoClip.EndTime.ToString("g")
                        </p>
                        <p class="mb-2">
                            <strong>Duration:</strong>
                            @(Model.VideoClip.EndTime - Model.VideoClip.StartTime).TotalMinutes.ToString("F1") minutes
                        </p>
                        <p class="mb-2">
                            <strong>File Size:</strong>
                            @((Model.VideoClip.FileSize / 1024.0 / 1024.0).ToString("F2")) MB
                        </p>
                        <p class="mb-0">
                            <strong>Storage:</strong>
                            @Model.VideoClip.StorageType
                        </p>
                        @if (!string.IsNullOrEmpty(Model.VideoClip.FilePath))
                        {
                            <div class="mt-3">
                                <a asp-controller="VideoClips" asp-action="Details" asp-route-id="@Model.VideoClip.Id"
                                   class="btn btn-primary btn-sm">
                                    <i class="fas fa-play"></i> View Clip
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-info-circle"></i> Metadata
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-1"><strong>Event ID:</strong> @Model.Id</p>
                    <p class="mb-1"><strong>Video Clip ID:</strong> @Model.VideoClipId</p>
                    <p class="mb-0"><strong>Created:</strong> @Model.Timestamp.ToString("F")</p>
                </div>
            </div>
        </div>
    </div>
</div>