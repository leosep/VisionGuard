@model IEnumerable<AnyCam.Models.VideoClip>

@{
    ViewData["Title"] = "Video Clips";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0"><i class="fas fa-video"></i> Video Clips</h1>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Add Clip</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <i class="fas fa-list"></i> Clip List
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-camera"></i> Camera</th>
                            <th><i class="fas fa-clock"></i> Start Time</th>
                            <th><i class="fas fa-clock"></i> End Time</th>
                            <th><i class="fas fa-file"></i> File Path</th>
                            <th><i class="fas fa-server"></i> Storage</th>
                            <th><i class="fas fa-weight"></i> Size (MB)</th>
                            <th><i class="fas fa-cogs"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Camera.Name)</td>
                            <td>@item.StartTime.ToString("g")</td>
                            <td>@item.EndTime.ToString("g")</td>
                            <td>@Html.DisplayFor(modelItem => item.FilePath)</td>
                            <td><span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.StorageType)</span></td>
                            <td>@(item.FileSize / 1024 / 1024) MB</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><i class="fas fa-info-circle"></i></a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>