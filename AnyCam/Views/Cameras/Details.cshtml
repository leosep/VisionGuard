@model AnyCam.Models.Camera

@{
    ViewData["Title"] = "Camera Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0"><i class="fas fa-info-circle"></i> Camera Details</h1>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <i class="fas fa-camera"></i> @Model.Name
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3"><i class="fas fa-tag"></i> Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3"><i class="fas fa-map-marker-alt"></i> Location</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Location)</dd>

                <dt class="col-sm-3"><i class="fas fa-link"></i> Stream URL</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.StreamUrl)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fas fa-edit"></i> Edit</a>
            <a asp-action="View" asp-route-id="@Model.Id" class="btn btn-success"><i class="fas fa-eye"></i> View Stream</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</a>
        </div>
    </div>
</div>