@model IEnumerable<AnyCam.Models.Camera>

@{
    ViewData["Title"] = "Video Wall";
}

<h1>Video Wall</h1>

<div class="container-fluid">
    <div class="row">
        @foreach (var camera in Model)
        {
            <div class="col-md-3 mb-3">
                <div class="card">
                    <div class="card-header">
                        @camera.Name
                    </div>
                    <div class="card-body">
                        <img id="img-@camera.Id" class="w-100"
                             data-id="@camera.Id"
                             data-stream-url="/Cameras/Stream/@camera.Id"
                             data-ip="@camera.IpAddress"
                             data-port="@camera.Port">
                    </div>
                </div>
            </div>
        }
    </div>

<script>
    document.querySelectorAll('img[id^="img-"]').forEach(img => {
        const streamUrl = img.dataset.streamUrl;
        if (streamUrl) {
            img.src = streamUrl;
        }
    });

    // Stop all streams when page is unloaded
    window.addEventListener('beforeunload', () => {
        navigator.sendBeacon('/Cameras/StopAllStreams');
    });
</script>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>