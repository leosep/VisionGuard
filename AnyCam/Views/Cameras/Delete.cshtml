@model AnyCam.Models.Camera

@{
    ViewData["Title"] = "Delete Camera";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0"><i class="fas fa-trash-alt"></i> Delete Camera</h1>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <i class="fas fa-exclamation-triangle"></i> Confirm Deletion
                </div>
                <div class="card-body">
                    <h5>Are you sure you want to delete this camera?</h5>
                    <dl class="row">
                        <dt class="col-sm-3"><i class="fas fa-tag"></i> Name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3"><i class="fas fa-globe"></i> IP Address</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.IpAddress)</dd>

                        <dt class="col-sm-3"><i class="fas fa-plug"></i> Port</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Port)</dd>

                        <dt class="col-sm-3"><i class="fas fa-network-wired"></i> Protocol</dt>
                        <dd class="col-sm-9"><span class="badge bg-secondary">@Html.DisplayFor(model => model.Protocol)</span></dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times"></i> Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>